<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.reproduceMe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="19"
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.reproduceMe.WelcomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.reproduceMe.Player"
            android:label="@string/title_activity_player" >
        </activity>
        <activity
            android:name="com.example.reproduceMe.SongsAdapter"
            android:label="@string/title_activity_songs_adapter" >
        </activity>
        <activity
            android:name="com.example.reproduceMe.ListenSong"
            android:label="@string/title_activity_listen_song" >
        </activity>
    </application>

</manifest>